@using EntityLayer.Concrete
@model List<NewsAnnouc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>        
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NewsAnnoucId</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/NewsAnnouc/DeleteNewsAnnouc/@item.NewsAnnoucId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/NewsAnnouc/EditNewsAnnouc/@item.NewsAnnoucId" class="btn btn-outline-warning">Güncelle</a></td>
                                @if(item.Status==true)
                                {
                                <td><a href="/NewsAnnouc/ChangeStatusFalse/@item.NewsAnnoucId" class="btn btn-outline-secondary">Pasif Yap</a></td>
                                }
                                else
                                {
                               <td><a href="/NewsAnnouc/ChangeStatusTrue/@item.NewsAnnoucId" class="btn btn-outline-success">Aktif Yap</a></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/NewsAnnouc/AddNewsAnnouc/" class="btn btn-outline-info">Yeni Duyuru Girişi</a>
            </div>
        </div>
    </div>
</div>
